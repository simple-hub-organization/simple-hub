{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "outDir": "../dist/esm",
        "types": ["@matter/tools", "globals", "node"],
        "resolveJsonModule": true, // needed for globals package
    },
    "typedocOptions": {
        "entryPoints": [
            "behavior/export.ts",
            "behavior/cluster/export.ts",
            "behavior/definitions/**/export.ts",
            "ble/export.ts",
            "certificate/export.ts",
            "cluster/export.ts",
            "codec/export.ts",
            "common/export.ts",
            "crypto/export.ts",
            "datatype/export.ts",
            "device/export.ts",
            "endpoint/export.ts",
            "endpoint/definitions/device/*.ts",
            "endpoint/definitions/system/*.ts",
            "environment/export.ts",
            "fabric/export.ts",
            "log/export.ts",
            "math/export.ts",
            "mdns/export.ts",
            "model/index.ts",
            "net/export.ts",
            "node/export.ts",
            "protocol/export.ts",
            "protocol/interaction/export.ts",
            "protocol/securechannel/export.ts",
            "schema/export.ts",
            "session/export.ts",
            "storage/export.ts",
            "time/export.ts",
            "tlv/export.ts",
            "util/export.ts",
            "export.ts"
        ],
        "out": "../../../docs/matter.js"
    }
}
